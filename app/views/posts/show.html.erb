<%= image_tag("inu.jpg",class: "img-responsive",:style=>"width :100%, margin-top :500px;") %>

<div class="container-fluid">

<!--Show Blog Post-->
<h1 class="row blog-title"><%= @post.title %></h1>
	

	<div class="col-md-2"></div>
	<div class="col-md-8">
		<p class="body">
		<%= @post.body %>
		</p>




		<div class="post-body">
		</div>
<!--end-->

	<!--buttons-->

	<div class="btn btn-default button">
		<%= link_to "Edit", edit_post_path(@post), class: "btn" %>
	</div>

	<div class="btn btn-default button">
		<%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: 'Are you sure?'}, class: "btn"%>
	</div>


	<div class="btn btn-default button">
		<%= link_to "Back to Index", posts_path, class: "btn" %>
	</div>

	<div class="btn btn-default button">
		<%= link_to "Logout", destroy_user_session_path, method: :delete, class: "btn" %>
	</div>


	<div class="post-body">
	</div>
	<!--end-->

</div>




